<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @listing.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @listing.name.titleize %></h3>
    <h5><%= number_to_currency(@listing.price) %></h5>
    <p><%= @listing.description %></p>
    <h4>Sold by <%= link_to @listing.user.try(:name_title), listing_by_user_path(@listing.user) %></h4>
    <br>
    <div class="center">
      <%= link_to 'Buy It Now', new_listing_order_path(@listing), class: "btn btn-primary" %>
    </div>
  </div>
</div>

<% if user_signed_in? && (current_user == @listing.user) %>
  <%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-link' %> |
<% end %>
<%= link_to 'Back', listings_path, class: 'btn btn-link' %>
