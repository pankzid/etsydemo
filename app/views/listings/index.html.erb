<div class="row">
  <% @listings.each do |listing| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <%= link_to((image_tag listing.image.url(:medium)), listing) %>
      <div class="caption center">
        <h3><%= listing.name.titleize %></h3>
        <p><%= number_to_currency(listing.price) %></p>
        <%= link_to 'Show', listing, class: 'btn btn-link' %>
        <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-link' %>
        <%= link_to 'Delete', listing, class: 'btn btn-link', method: :delete, data: { confirm: 'Are you sure!'} %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
